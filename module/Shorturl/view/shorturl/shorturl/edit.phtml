    /**
     *   Save shared url
     */
    $('#save-shared-user').on('click', function () {
        var userUid = $('#shared-user-id').val();
        var shortUrlId = <?=json_encode($this->shorturl->id)?>;
        var $obj = $('#shared-user');
        var $errorBox = $('.display-errors');
        $.ajax({
            url: <?=json_encode($this->url('shorturl', ['action' => 'addShare']))?>,
            dataType: "json",
            method: 'post',
            data: {
