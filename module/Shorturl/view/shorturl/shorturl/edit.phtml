    $("#shared-user").userautocomplete({
        source: function (request, response) {
            $('#shared-user-loading').show();
            $.ajax({
                url: <?=json_encode($this->url('shorturl', ['action' => 'findUsers']))?>,
                dataType: "json",
                data: {
                    q: request.term
